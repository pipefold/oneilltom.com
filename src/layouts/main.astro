---
import "../styles/global.css";
import { Font } from "astro:assets";
import ThreeBackground from "../components/ThreeBackground.astro";
import { ModeToggle } from "@/components/ModeToggle";

const { content } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{content.title}</title>

    <!-- Apply saved theme preference immediately (no flash) -->
    <script is:inline>
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "light" || savedTheme === "dark") {
        // User has made a manual choice - apply it
        document.documentElement.classList.add(savedTheme);
      } else {
        // No manual choice - let CSS handle system preference via @media query
        // This prevents flash and respects system preference until user makes a choice
      }
    </script>

    <!-- Load the fonts -->
    <Font cssVariable="--font-montserrat" />
    <Font cssVariable="--font-cormorant" />
    <Font cssVariable="--font-inconsolata" />
  </head>
  <body>
    <ThreeBackground />
    <div class="fixed top-4 right-4 z-50">
      <ModeToggle client:only />
    </div>
    <slot />
  </body>
</html>
