---
import MainLayout from "../layouts/main.astro";
import { Button } from "@/components/ui/button";
---

<MainLayout content={{ title: "Astro + TailwindCSS" }}>
  <div class="grid place-items-center h-screen content-center gap-4">
    <h1 class="text-4xl font-bold font-sans">Astro</h1>
    <p class="text-xl font-serif">Beautiful typography with custom fonts</p>
    <code class="font-mono bg-muted p-2 rounded"
      >console.log('Monospace font test');</code
    >

    <!-- Debug element -->
    <div class="debug-fonts p-4 rounded border">
      This element will show debug info about the Montserrat font variable
    </div>

    <Button>Tailwind Button in Astro!</Button>
    <a href="/markdown-page" class="p-4 underline"
      >Markdown is also supported...</a
    >
    <a href="/portfolio" class="p-4 underline">Portfolio</a>
    <a href="/resume" class="p-4 underline">Resume</a>
  </div>
</MainLayout>
